
<section style="height: 100%; background-image: url('https://hd.unsplash.com/photo-1472437774355-71ab6752b434'); background-size: cover; background-position: center">
<div class="container">
  <div class="well" style="background:#7f7f7f; background:rgba(255,255,255,0.5);">
<center>
<h2>비밀번호를 잊어버리셨나요?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :이메일 %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</center>
</div>
</div>
</section>
