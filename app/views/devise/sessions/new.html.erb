<style>
  input, label {
  color: black;
}
</style>
<section style="height: 100%; background-image: url('https://hd.unsplash.com/photo-1472437774355-71ab6752b434'); background-size: cover; background-position: center">
<div class="container">
  <div class="well" style="background:#7f7f7f; background:rgba(255,255,255,0.5);">   
    <center>
    <h2>로그인</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :이메일 %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>
    
      <div class="field">
        <%= f.label :비밀번호 %><br />
        <%= f.password_field :password, autocomplete: "on" %>
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :비밀번호_기억 %>
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit "로그인" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
    </center>
  </div>
</div>
</section>
