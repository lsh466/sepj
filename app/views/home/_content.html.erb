
    <!-- Page Content -->
<div class="container-fluid">
       <!-- Portfolio Section -->
    <div class="row">
        <% @every_book.each do |p| %> 
        <a href="/book_content/<%= p.id %>">
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="card hovercard" style="cursor: pointer">
             
                    <% if p.selling == 0 %> 
                        <img src="<%= p.first_image_url %>" style="width: 100%; height: 200px" alt=""/>
                    <% else %>
                        <img src="http://joonggo.sarangbang.com/mobile/img/saleOk.png" style="width: 350px; height: 200px" alt=""/>
                        <div>판매-------------------------------완료</div>
                    <% end %>
                
                    <div class="avatar">
                        <img src="/app/assets/images/rebook.PNG" style="width: 80px; height: 80px" alt="" />
                    </div>
                    <div class="info">
                        <div class="title">
                         책이름: <%= p.bookname %>
                        </div>
                        <div class="desc">저자: <%= p.writer %></div>
                        <div class="desc">관련강의: <%= p.lesson %></div>
                        <div class="desc">출판사: <%= p.publish %></div>
    
                    </div>
        </a>
                </div>
            </div>    
        <% end %>
    </div>
</div>