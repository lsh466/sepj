
<div class= "container">

    <div class="header-top">
        <h3 style="margin-top: 70px">FAQ 게시판</h3>
        
   
        <div class="well" style="margin-top: 100px; border:1px black;" >
                    <div class="row">
                      <div class="col-md-2">작성자: <%= @faq_show_content.user.major%>   <%= @faq_show_content.user.name%></div>
                      <div class="col-md-1"></div>
                      <div class="col-md-6">제목: <%=@faq_show_content.title%></div>
                      <div class="col-md-2">작성일: <%=@faq_show_content.created_at.strftime("%m/ %d/ %Y")%></div>
                      <div class="col-md-1"></div>
                    </div>
        </div>
  
    </div>
        
        <div class="table-responsive">
            <table class="table" height="400">
                <tr>    
                    <td><%= @faq_show_content.content %></td>
                </tr>
            </table>
            <table class="table" height="10">
                <tr>
                    <td><p align="right"><a href="/faq">[목록] </a><a href="/faq_update/<%=@faq_show_content.id%>">   [수정]</a><a href="/faq_destroy/<%=@faq_show_content.id%>">   [삭제]</a></p></td>
                </tr>    
            </table>
        </div>
        
       <form action ="/faq_reply" method="POST">
              <div class="form-group">
                  <div class="well">
                        <input type="hidden" value="<%=@faq_show_content.id%>" name="id_faq"> 
                        <input type="text" class="form-control" name="reply">
                  </div>
	        	    <button type="submit" class="btn btn-default" style ="margin-top: 15px; margin-left:1044px" style="align:left" >댓글달기</button>
		          <div style="margin-top:100px">
		              
		          
    		         <table class="table" style="margin-bottom:150px;"> 
                           <% @faq_show_content.faqreplies.each do |r| %>
                           <tr>
                          <td><p><%= r.user.name%>:</p><%= r.content %></td>   
                          </tr>
                            <% end %>
                     </table>   
                  </div>
		      </div>    
		 </form>  
		 
		 
		 
		 
		 
		 
		 
</div>

